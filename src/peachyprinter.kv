#:kivy 1.8.0
#:import _ __main__._


<MyScreenManager>:
    MainUI:

<MainUI>:
    name: 'mainui'
    FloatLayout:
        BoxLayout:
            size: root.size
            pos: root.pos
            orientation: 'vertical'
            Button:
                text: 'Print from file'
                size_hint: [0.3, 0.1]
                on_release: app.root.current = 'printingui'
            Button:
                size_hint: [0.3, 0.1]
                text: 'Print from library'
        FloatLayout:
            Button:
                size_hint: [0.06, 0.06]
                pos: [root.size[0] - root.size[0] * 0.06, root.size[1] - root.size[1] * 0.06 ]
                on_release: app.open_settings()
                background_normal: 'resources/icons/settings-up.png'
                background_down:   'resources/icons/settings-down.png'

<PrintingUI>:
    name: 'printingui'
    BoxLayout:
        Accordion:
            orientation: 'vertical'
            size_hint_x:0.6
            AccordionItem:
                id: print_details
                title: _("Print Details")
            AccordionItem:
                title: _("Printer Settings")
                ScrollView:
                    LabelGridLayout:
                        id: print_settings
                        size_hint_y:None
                        text_padding_x: 10
                        cols: 1
        BoxLayout:
            id: displaywindow
            Label:
                text: 'Printing UI'
            Button:
                text: "Abort"
                size_hint:[0.2,0.1]
                on_release: app.root.current = 'mainui'