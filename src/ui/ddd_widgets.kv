#:kivy 1.9.0
#:import I18NLabel ui.custom_widgets.I18NLabel

<I18NObjImageButton>:
    BoxLayout:
        size_hint: [None,None]
        width: root.width
        height: root.height
        x: root.x
        y: root.y
        orientation: 'horizontal'
        I18NLabel:
            text_size: self.size
            valign: 'top'
            text_source: root.text_source
            padding: ['5dp','5dp']
        BoxLayout:
            size_hint: [None,None]
            width: root.width * 0.66
            height: root.height * 0.66
            x: root.x
            y: root.y
            Renderer:
                id: renderer
                x: root.x
                y: root.y
                model: root.model