#:kivy 1.9.0
#:import _ __main__._
#:import FloatInput ui.custom_widgets.FloatInput

<CircutSetup>:
    orientation: 'vertical'
    I18NLabel:
        markup: True
        size_hint_y:None
        height: "30dp"
        text_source:_("[b]Dripper Test Setup[/b]")
    BoxLayout:
        orientation: 'vertical'
        VerticalLabelSlider:
            id: drip_count_final_height
            min_value: 1
            max_value: 1000
            value: root.test_height
            title: _("Test Height")
            unit: "mm"
            step: 1
            on_value: root.test_height = self.value

<DripperAnimation>:
    cup_width: self.width / 2
    cup_top: self.height / 2.0
    cup_bottom: 10.0
    cup_height: self.cup_top - self.cup_bottom
    cup_water_level: self.cup_height / 4.0
    cup_left: 10.0
    cup_right: self.cup_left + self.cup_width
    cup_dest_water_level: (self.cup_height - self.cup_water_level + self.cup_bottom) * (self.test_height / 1000.0)
    canvas.before:
        Color:
            rgba: 0.0, 0.4, 1.0, 0.8
        Rectangle:
            pos: [self.cup_left, self.cup_bottom]
            size: [self.cup_width, self.cup_water_level]
        Color:
            rgba: 0.0, 0.4, 1.0, 0.4
        Rectangle:
            pos: [self.cup_left, self.cup_water_level+ self.cup_bottom]
            size: [self.cup_width, self.cup_dest_water_level]
        Color:
            rgba: 1., 1., 1., 1.0
        Line:
            points: 
                [self.cup_left, self.cup_top,
                self.cup_left, self.cup_bottom,
                self.cup_right, self.cup_bottom,
                self.cup_right, self.cup_top
                ]
            width: 4
    Label:
        text: "{:.2f}mm".format(root.test_height)
        pos: [root.cup_right + 5, root.cup_dest_water_level]
        size_hint: [None, None]
        height: "30dp"
        width: root.cup_width

<CircutVisuals>:
    orientation: 'vertical'
    padding: "3dp"
    I18NButton:
        size_hint_y:None
        height: "30dp"
        text_source: _("Reset Drip Count")
        on_release: root.reset = not root.reset
    I18NLabel:
        size_hint_y:None
        height: "30dp"
        text_source:_("[b]Circut Setup[/b]")
        markup: True
    DripperAnimation:
        id: dripper_animation
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y:None
        height: "30dp"
        I18NLabel:
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            text_source:_("Drips")
        Label:
            halign: 'right'
            valign: 'middle'
            text_size: self.size
            text: root.drips
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y:None
        height: "30dp"
        I18NLabel:
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            text_source:_("Average Drips")
        Label:
            halign: 'right'
            valign: 'middle'
            text_size: self.size
            text: root.average_drips
    Button:
        size_hint_y:None
        halign: "center"
        height: "60dp"
        start: _("It takes")
        middle: _("drips\n to make")
        end: _("mm of water")
        text: "{} {} {} {}{}".format(app.translation(self.start), root.drips, app.translation(self.middle), root.target_height, app.translation(self.end))
        on_release: root.calculate_drips_per_mm()

<CircutSettings>:
    orientation: 'vertical'
