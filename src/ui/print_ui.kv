#:kivy 1.9.0

<ListElement>:
    orientation: 'vertical'
    size_hint_y: None
    height:"50dp"
    canvas.before:
        Color:
            rgba: 1.0, 1.0, 1.0, 0.1
        Rectangle:
            pos:  self.pos
            size: self.size
    I18NLabel:
        text_source: root.title
        size_hint_y: None
        height: app.label_height
        text_size: self.size
        halign: 'left'
        valign: 'middle'
    Label:
        text: root.value
        size_hint_y: None
        height: app.label_height
        text_size: self.size
        halign: 'right'
        valign: 'middle'

<PrinterAnimation>:
    resin_height: max(5, root.container_height / 30)
    water_height: (root.scale * root.printer_current_actual_height)
    print_area_left: root.middle_x - (root.print_area_width / 2.0)
    middle_x: root.width / 2
    container_padding: root.print_area_width * 0.05
    container_left: root.print_area_left - root.container_padding
    container_width: root.print_area_width + root.container_padding + root.container_padding
    container_bottom: root.print_area_bottom
    container_height: root.print_area_height + root.container_padding + root.container_padding
    laser_speed: (root.print_area_width / (1.0 / root.refresh_rate) / 10.0)
    canvas:
        #Background
        Color:
            rgba: 1.0, 1.0, 1.0, 1.0
        Rectangle:
            size: [root.container_width, root.resin_height + root.water_height]
            pos: [root.container_left, root.print_area_bottom]

        #Resin
        Color:
            rgba: root.resin_color
        Rectangle:
            size: [root.container_width, root.resin_height]
            pos: [root.container_left, root.print_area_bottom + root.water_height ]

        #Water
        Color:
            rgba: root.water_color
        Rectangle:
            size: [root.container_width, root.water_height]
            pos: [root.container_left, root.print_area_bottom]

        #Container
        Color:
            rgba: root.container_color
        Line:
            points: 
                [root.container_left, root.container_height + root.resin_height,
                root.container_left, root.container_bottom,
                root.container_left + root.container_width, root.container_bottom,
                root.container_left + root.container_width, root.container_height + root.resin_height
                ]
            width: 4

        #Laser
        Color:
            rgba: root.laser_color
        Line:
            points: root.laser_points
            width: 2

        Color:
            rgba: root.laser_color_edge
        Line:
            points: [ root.laser_points[idx] + 2 * ((idx + 1) % 2) for idx in range(0,len(root.laser_points))]
            width: 1

        Color:
            rgba: root.laser_color_edge
        Line:
            points: [ root.laser_points[idx] - 2 * ((idx + 1) % 2) for idx in range(0,len(root.laser_points))]
            width: 1

        Color:
            rgba: root.laser_color_edge2
        Line:
            points: [ root.laser_points[idx] + 3 * ((idx + 1) % 2) for idx in range(0,len(root.laser_points))]
            width: 1

        Color:
            rgba: root.laser_color_edge2
        Line:
            points: [ root.laser_points[idx] - 3 * ((idx + 1) % 2) for idx in range(0,len(root.laser_points))]
            width: 1
    Image:
        size_hint: [None, None]
        source: "resources/peachy.png"
        pos: [root.middle_x - (self.width / 2.0), root.height  - (self.height / 2) - root.padding]
        size: root.laser_size

<SettingsPopUp>:
    size_hint: (0.6, 0.6)
    title_source: _("Settings")
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            BoxLayout:
                orientation:'vertical'
                id: print_settings
                size_hint_y: None
                height: sum([child.height + self.spacing for child in self.children])
                spacing: "3dp"
        I18NButton:
            text_source: _("Close")
            on_release: root.dismiss()
            size_hint_y: None
            height: app.button_height

<DripSpeed>:
    orientation: 'vertical'
    size_hint_y: None
    height: self.minimum_height
    cols: 1
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: app.label_height
        I18NLabel:
            size_hint_y: None
            height: app.label_height
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            text_source: _("Drip Speed")
        Label:
            size_hint_y: None
            height: app.label_height
            text_size: self.size
            halign: 'right'
            valign: 'middle'
            text: '{0:.2f}'.format(root.drips_per_second)
    Slider:
        size_hint_y: None
        orientation: 'horizontal'
        height: app.label_height
        min: 0.0
        max: 20.0
        value: root.drips_per_second
        on_value: root.drips_per_second = self.value

<PrintingUI>:
    name: 'printingui'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            size_hint_x: None
            width: "250dp"
            orientation:'vertical'
            padding: "3dp"
            spacing: "10dp"
            GridLayout:
                padding: "3dp"
                spacing: "3dp"
                cols: 1
                id: dripper_grid
                height: self.minimum_height
                size_hint_y: None
                canvas.before:
                    Color:
                        rgba: 1.0, 1.0, 1.0, 0.3
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: app.button_height
                    Image:
                        size_hint: [None, None]
                        size: ["24dp", "24dp"]
                        allow_stretch: True
                        keep_ratio: True
                        source: "resources/icons/printing_dripper-24x24.png"
                    I18NLabel:
                        text_source: _("Dripper Informaiton")
                        bold: True
                GridLayout:
                    height: self.minimum_height
                    size_hint_y: None
                    cols: 2
                    I18NLabel:
                        size_hint_y: None
                        height: app.label_height
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
                        text_source: _("Drips per second")
                    Label:
                        size_hint_y: None
                        height: app.label_height
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'
                        id: drips_per_second_value_id
                        text: "{:.2f}".format(root.drips_per_second)
                    I18NLabel:
                        size_hint_y: None
                        height: app.label_height
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
                        text_source: _("Total Drips")
                    Label:
                        size_hint_y: None
                        height: app.label_height
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'
                        id: total_drips_value_id
                        text: '{0:.0f}'.format(root.drips)
                    I18NLabel:
                        size_hint_y: None
                        height: app.label_height
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
                        text_source: _("Waiting for drips")
                    Label:
                        size_hint_y: None
                        height: app.label_height
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'
                        id: waiting_for_drips_value_id
                        text: root.waiting_for_drips
            GridLayout:
                padding: "3dp"
                spacing: "5dp"
                cols: 1
                height: self.minimum_height
                size_hint_y: None
                canvas.before:
                    Color:
                        rgba: 1.0, 1.0, 1.0, 0.3
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: app.button_height
                    Image:
                        size_hint: [None, None]
                        size: ["24dp", "24dp"]
                        allow_stretch: True
                        keep_ratio: True
                        source: "resources/icons/printing_time-24x24.png"
                    I18NLabel:
                        bold: True
                        text_source: _("Time")
                GridLayout:
                    cols: 2
                    height: self.minimum_height
                    size_hint_y: None
                    I18NLabel:
                        size_hint_y: None
                        height: app.label_height
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
                        text_source: _("Start Time")
                    Label:
                        size_hint_y: None
                        height: app.label_height
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'
                        text: root.start_time.strftime("%H:%M")
                    I18NLabel:
                        size_hint_y: None
                        height: app.label_height
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
                        text_source: _("Elapsed Time")
                    Label:
                        size_hint_y: None
                        height: app.label_height
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'
                        text: root.elapsed_time
            GridLayout:
                cols: 1
                padding: "3dp"
                spacing:"3dp"
                height: self.minimum_height
                size_hint_y: None
                canvas.before:
                    Color:
                        rgba: 1.0, 1.0, 1.0, 0.3
                    Rectangle:
                        pos: self.pos
                        size: self.size
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    height: app.button_height
                    Image:
                        size_hint: [None, None]
                        size: ["24dp", "24dp"]
                        allow_stretch: True
                        keep_ratio: True
                        source: "resources/icons/printing_posisition-24x24.png"
                    I18NLabel:
                        bold: True
                        text_source: _("Posisition")
                GridLayout:
                    cols: 2
                    height: self.minimum_height
                    size_hint_y: None
                    padding: "3dp"
                    I18NLabel:
                        size_hint_y: None
                        height: app.label_height
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
                        text_source: _("Current Height")
                    Label:
                        size_hint: [0.3, None]
                        height: app.label_height
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'
                        text: "{:.2f}".format(root.print_height)
                    I18NLabel:
                        size_hint_y: None
                        height: app.label_height
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
                        text_source: _("Layers")
                    Label:
                        size_hint: [0.3, None]
                        height: app.label_height
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'
                        text: "{:.0f}".format(root.current_layer)
                    I18NLabel:
                        size_hint_y: None
                        height: app.label_height
                        text_size: self.size
                        halign: 'left'
                        valign: 'middle'
                        text_source: _("Skipped Layers")
                    Label:
                        size_hint: [0.3, None]
                        height: app.label_height
                        text_size: self.size
                        halign: 'right'
                        valign: 'middle'
                        text: "{:.0f}".format(root.skipped_layers)
            Label:
            I18NImageButton:
                text_source: _("Cancel Print")
                source: "resources/icons/printing_cancel-24x24.png"
                on_release: app.root.current = root.return_to
                id: navigate_button
                size_hint_y: None
                height: app.button_height
            I18NImageButton:
                text_source: _("Restart Print")
                source: "resources/icons/printing_restart-24x24.png"
                on_release: root.restart()
                size_hint_y: None
                height: app.button_height
            I18NImageButton:
                text_source: _("Display Settings")
                source: "resources/icons/printing_settings-24x24.png"
                on_release: root.settings_popup.open()
                size_hint_y: None
                height: app.button_height
        BoxLayout:
            orientation: 'vertical'
            PrinterAnimation:
                id: printer_animation


