#:kivy 1.9.0

<PrintingUI>:
    name: 'printingui'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Accordion:
                orientation: 'vertical'
                size_hint_x:0.6
                I18NAccordionItem:
                    collapse:False
                    id: print_details
                    title_source: _('Print Details')
                    ScrollView:
                        PrintStatus:
                            id: print_status
                            cols: 1
                            size_hint_y:None
                            text_padding_x: 10
                I18NAccordionItem:
                    title_source: _('Printer Settings')
                    collapse:True
                    ScrollView:
                        LabelGridLayout:
                            id: print_settings
                            size_hint_y:None
                            text_padding_x: 10
                            cols: 1
            BoxLayout:
                id: displaywindow
                I18NLabel:
                    text_source: _('Printing UI')
                Dripper:
                    id: dripper
                    size_hint_x: 0.05
        BoxLayout:
            size_hint_y: None
            height: "30dp"
            orientation: "horizontal"
            I18NButton:
                id: restart_button
                text_source: _('Restart Print')
                on_release: root.restart()
            I18NButton:
                id: navigate_button
                text_source: _('Cancel Print')
                on_release: app.root.current = root.return_to


