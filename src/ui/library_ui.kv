#:kivy 1.8.0
#:import _ __main__._
#:import FloatInput ui.custom_widgets.FloatInput

<PrintPop>:
    title_source: self.name
    size_hint: [0.9, 0.9]
    BoxLayout:
        orientation: 'horizontal'
        Image:
            size_hint: (0.8,1.0)
            source: root.image()
        BoxLayout:
            orientation: 'vertical'
            StackLayout:
                orientation: 'lr-tb'
                BoxLayout:
                    size_hint: [1.0, 60 / root.height]
                    orientation: 'horizontal'
                    I18NLabel:
                        text_source: _("Height (mm)")
                    FloatInput:
                        id: height
                        text: '20'
                BoxLayout:
                    size_hint: [1.0, 60 / root.height]
                    orientation: 'horizontal'
                    I18NLabel:
                        text_source: _("Width (mm)")
                    FloatInput:
                        id: width
                        text: '20'
                BoxLayout:
                    size_hint: [1.0, 60 / root.height]
                    orientation: 'horizontal'
                    I18NLabel:
                        text_source: _("Layer Height (mm)")
                    FloatInput:
                        id: layer_height
                        text: '0.01'
                BoxLayout:
                    size_hint: [1.0, 60 / root.height]
                    orientation: 'horizontal'
                    I18NLabel:
                        text_source: _("Speed (mm/sec)")
                    FloatInput:
                        id: speed
                        text: '120'
            BoxLayout:
                size_hint: [1.0, 60 / root.height]
                orientation: 'horizontal'
                I18NImageButton:
                    source: "resources/icons/library_cancel-24x24.png"
                    text_source: _("Cancel")
                    on_release: root.dismiss()
                I18NImageButton:
                    source: "resources/icons/library_print_now-24x24.png"
                    text_source: _("Print Now")
                    on_release: root.dismiss(); root.print_from_library()

<LibraryUI>:
    name: 'libraryui'
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            GridLayout:
                id: library_grid
                cols: 2
        I18NImageButton:
            source: "resources/icons/general_back-24x24.png"
            size_hint: [1.0, 0.05]
            text_source: _('Back')
            on_release: app.root.current = 'mainui'