            #size_hint_x: self.size_hint_x if root.orientation == 'vertical' else None
            height: root.text_height

<ErrorPopup>:
    BoxLayout:
        orientation: 'vertical'
        I18NLabel:
            text_source: root.text
            height: "30dp"
            size_hint_y: None
        ScrollView:
            Label:
                text: root.details
                text_size: self.width, None
                size_hint_y: None
        I18NButton:
            text_source: _("Close")
            on_release: root.dismiss()
            height: "30dp"
            size_hint_y: None
