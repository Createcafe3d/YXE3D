#:kivy 1.8.0
#:import _ __main__._
#:import FloatInput ui.custom_widgets.FloatInput

<CureTestUI>:
    name: 'curetestui'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.6
            Label:
                size_hint_y: 40.0 / root.height
                text: _('Cure Test Setup')
                bold: True
            BoxLayout:
                orientation:"horizontal"
                size_hint_y: 40.0 / root.height
                Label:
                    text: _('Height (mm)')
                FloatInput:
                    text: '40'
            BoxLayout:
                orientation:"horizontal"
                size_hint_y: 40.0 / root.height
                Label:
                    text: _('Width (mm)')
                FloatInput:
                    text: '10'
            BoxLayout:
                orientation:"horizontal"
                size_hint_y: 40.0 / root.height
                Label:
                    text: _("Start Speed")
                FloatInput:
                    text: '90'
            BoxLayout:
                orientation:"horizontal"
                size_hint_y: 40.0 / root.height
                Label:
                    text: _("Finish Speed")
                FloatInput:
                    text: '250'
            Label:
            BoxLayout:
                size_hint_y: 40.0 / root.height
                Button:
                    text: _('Back')
                    on_release: app.root.current = 'mainui'
                Button:
                    text: _("Start Test")
        Label:
            text: "Graphics here"