#:kivy 1.9.0
#:import _ infrastructure.langtools._

<RestoreUI>:
    name: 'restoreui'
    BoxLayout:
        orientation: "vertical"
        I18NLabel:
            text_source: _("You are about to destory all of those settings you spent forever setting up")
        BoxLayout:
            size_hint_y: None
            height: dp(150)
            orientation: "horizontal"
            I18NImageButton:
                orientation: 'vertical'
                source: "resources/icons/restore_defaults_proceed-100x100.png"
                text_source: _("Yep, Nuke Em.")
                on_release: root.restore_defaults(); app.root.current = 'main_ui'
            I18NImageButton:
                orientation: 'vertical'
                source: "resources/icons/restore_defaults_abort_cancel-100x100.png"
                text_source: _("No, No, Abort, Stop.")
                on_release: app.root.current = 'main_ui'