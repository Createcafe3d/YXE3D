<Dripper>:

<I18NHelpPopup>:
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            padding: "10dp"
            I18NLabel:
                text_source: root.text_source
                markup: True
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
        I18NButton:
            text_source: _('Done')
            size_hint_y:None
            height: "30dp"
            on_release: root.dismiss()